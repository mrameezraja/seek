@model Seek.Models.CoursesVM
@{
    ViewData["Title"] = "Courses";
}

<header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Courses</h1>
    </div>
</header>
<main>
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <div>
            <ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
                @foreach (var course in Model.Courses)
                {
                    bool active = course.slug.Equals(Model.Course?.Course?.slug);

                    <li class="col-span-1 flex flex-col bg-white shadow divide-y divide-gray-200">
                        <div class="flex-1 flex flex-col p-3">
                            <h3 class="text-gray-900 text-md font-bold">@course.name</h3>
                        </div>
                        <div>
                            <div class="-mt-px flex divide-x divide-gray-200">
                                <div class="w-0 flex-1 flex">
                                    <span class="ml-3 relative w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium border border-transparent rounded-br-lg hover:text-gray-500">
                                        
                                    </span>
                                </div>
                                <div class="-ml-px w-0 flex-1 flex">
                                    <a class="@(course.slug.Equals(Model.Course?.Course?.slug) ? "active" : "" ) text-blue-500 hover:text-blue-300 relative w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium border border-transparent rounded-br-lg hover:text-gray-500" asp-area="" asp-controller="Courses" asp-action="Details" asp-route-course="@course.slug" asp-route-chapter="@Model.Course?.Chapter?.slug" asp-route-lesson="@Model.Course?.Lesson?.slug">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</main>