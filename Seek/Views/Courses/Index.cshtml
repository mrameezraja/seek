@model Seek.Models.CoursesVM
@{

}

<header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Courses</h1>
    </div>
</header>
<main>
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <div>
            @foreach (var course in Model.Courses)
            {
                <div>
                    <a class="@(course.slug.Equals(Model.Course?.Course?.slug) ? "active" : "" )" asp-area="" asp-controller="Courses" asp-action="Details" asp-route-course="@course.slug" asp-route-chapter="@Model.Course?.Chapter?.slug" asp-route-lesson="@Model.Course?.Lesson?.slug">@course.name</a>
                </div>
            }
        </div>
    </div>
</main>