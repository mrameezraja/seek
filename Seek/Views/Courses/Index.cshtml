@model Seek.Models.CoursesVM
@{
    ViewData["Title"] = "Courses";
}

<header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Courses</h1>
    </div>
</header>
<main>
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <div>
            <nav class="px-2 space-y-1">
                @foreach (var course in Model.Courses)
                {
                    bool active = course.slug.Equals(Model.Course?.Course?.slug);

                    <div class="max-w-sm rounded overflow-hidden shadow-lg border">
                        <div class="bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
                            <div class="mb-8">
                                <div class="text-gray-900 font-bold text-xl mb-2">@course.name</div>
                                <p class="text-gray-700 text-base"></p>
                            </div>
                            <div class="flex items-center justify-between">
                                <div class="text-sm">
                                    <p class="text-gray-900 leading-none">@course.author</p>
                                    <p class="text-gray-600"></p>
                                </div>
                                <div class="text-sm">
                                    <a class="@(course.slug.Equals(Model.Course?.Course?.slug) ? "active" : "" ) text-blue-500 hover:text-blue-300" asp-area="" asp-controller="Courses" asp-action="Details" asp-route-course="@course.slug" asp-route-chapter="@Model.Course?.Chapter?.slug" asp-route-lesson="@Model.Course?.Lesson?.slug">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </nav>
        </div>
    </div>
</main>